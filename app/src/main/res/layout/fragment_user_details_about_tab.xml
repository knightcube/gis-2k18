<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.udacity.googleindiascholarships.members.ui.ProfileAboutTabFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:background="#F1F9FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Short Description"
                android:textColor="@color/darkBlue"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="@dimen/sp_standard_size"/>

            <ImageButton
                android:id="@+id/btn_user_description_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_edit"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_user_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_short_description_sample"
            android:textColor="@color/darkBlue"
            android:textSize="14sp"
            android:focusable="false"
            android:padding="4dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:background="#F1F9FF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textColor="@color/darkBlue"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="@dimen/sp_standard_size"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btn_user_skill_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_edit"
                android:background="@android:color/transparent"/>

        </LinearLayout>


        <EditText
            android:id="@+id/et_user_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_skills_sample"
            android:textColor="@color/darkBlue"
            android:textSize="14sp"
            android:padding="4dp"
            android:focusable="false"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>
