<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="3dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_all_story_profile_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_gis_logo"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/tv_all_story_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Akshit Jain"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/iv_all_story_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14th April 2018"/>

            </LinearLayout>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_heart_outline"
                android:padding="4dp"
                android:tint="@color/black"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_all_story_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/ic_sample_story_bg_2"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_all_story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/featured_story_sample_description"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="visible"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_read_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="READ"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
